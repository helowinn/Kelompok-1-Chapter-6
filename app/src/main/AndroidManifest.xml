<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" >

    <application
        android:name=".utils.Apps"
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/Theme.MyApplication"
        tools:targetApi="31" >
        <activity
            android:name=".ui.splash.SplashScreenActivity"
            android:exported="true" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".ui.landing.LandingPageActivity" />
        <activity android:name=".ui.login.LoginActivity" />
        <activity android:name=".ui.main.signup.SignUpActivity" />
        <activity
            android:name=".ui.main.MainActivity"
            android:theme="@style/Theme.Fab_Bottom_app_bar" />
        <activity android:name=".ui.task.TaskActivity"
            android:exported="true"/>
        <activity
            android:name=".ui.profile.DetailProfileActivity"
            android:exported="false" />
        <activity
            android:name=".ui.detail_task.DetailTaskActivity"
            android:exported="false" />
    </application>

</manifest>